<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/error_toast_background"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/error_toast">

    <ImageView
        android:id="@+id/error_toast_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_baseline_error_outline_24"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/error_toast_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/inter_semibold"
        android:letterSpacing="-0.03"
        android:text="Lütfen gerekli boşlukları doldurun."
        android:textColor="@color/white"
        android:textSize="13sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="13sp"
        android:autoSizeMinTextSize="10sp"/>


</LinearLayout>